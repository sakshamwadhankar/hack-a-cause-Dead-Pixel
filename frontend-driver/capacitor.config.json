{
  "appId": "com.deadpixel.jalrakshak.driver",
  "appName": "JalRakshak Driver",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "cleartext": true,
    "allowNavigation": ["*"]
  },
  "android": {
    "allowMixedContent": true,
    "backgroundColor": "#f97316"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#f97316",
      "showSpinner": false,
      "androidSpinnerStyle": "small",
      "spinnerColor": "#ffffff"
    }
  }
}
